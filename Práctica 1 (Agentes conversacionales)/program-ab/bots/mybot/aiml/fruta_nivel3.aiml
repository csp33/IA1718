		El valor de tamanio es <get name="tamanio"/>
<!--	<think>  -->
			<condition name="tamanio">
				<li value="pequenio">
					peq_preg si
					<set name="peq_preguntado">SI</set>
				</li>
				<li value="mediano">
					med_preg=si
					<set name="mediano_preguntado">SI</set>
				</li>
				<li>
					grande_preg=si
					<set name="grande_preguntado">SI</set>
				</li> 
			</condition>

			<set var="actual"><get name="tamanio"/></set>
			<set name="tamanio">unknown</set>

			<condition var="actual">
				<li value="PEQUENIO">
					<condition name="mediano_preguntado">
						<li value="SI">
							mediano_preg=si
							<set name="tamanio">GRANDE</set>
						</li>
						<li>
							<srai>tam_mediano</srai>
						</li>
					</condition>
				</li>
				<li value="MEDIANO">
					<condition name="peq_preguntado">
						<li value="SI">
							peq_preg=si
							<set name="tamanio">GRANDE</set>
